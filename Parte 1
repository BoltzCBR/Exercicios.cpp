#include <iostream>

using namespace std;

int main() {
    // Declare variáveis a e b e inicialize-as com o valor 4
    int a = 4;
    int b = 4;

    // Declare uma constante PI e inicialize-a com o valor de 3.14159
    const double PI = 3.14159;

    // Declare a variável num
    double num;

    // Exiba os resultados das operações matemáticas
    cout << "Soma: " << a + b << endl;
    cout << "Diferença: " << a - b << endl;
    cout << "Produto: " << a * b << endl;
    cout << "Quociente: " << a / b << endl;
    cout << "Resto: " << a % b << endl;

    // Solicite o valor do raio do usuário
    cout << "Qual o valor que queres usar para o raio do círculo: ";
    cin >> num;

    // Calcule e exiba a área do círculo
    cout << "Área do círculo: " << PI * (num * num) << endl;

    return 0;
